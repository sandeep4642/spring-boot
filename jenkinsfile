@Library('jenkins-shared-library')_

pipeline {
    agent any


environment {
    registry = "sandeep4642"
    registryrepo = "/spring-boot"
    registryCreds = "dockerhub-creds"
    dockerfile = "Dockerfile"
    imageURI =  "${registry}${registryrepo}:${env.BUILD_NUMBER}"
}
stages {

    stage('Build') {
    agent { label 'slave1'}
    when { allOf { environment name: 'os_type', value: 'linux'} }  
      steps {
          script {
               build.mavenbuild()

        }
    }
    
  }

    stage('Docker build') {
    agent { label 'slave1'}
    when { allOf { environment name: 'os_type', value: 'linux'} }  
      steps {
          script {
            dockerImage = build.buildDockerTaggedImage1(imageURI)

        }
    }
    
  }
  stage('Docker push') {
    agent { label 'slave1'}
    when { allOf { environment name: 'os_type', value: 'linux'} }  
      steps {
        script {
             build.dockerpush()
            }
    }
    
  }
}
post {
    cleanup {
        script{
            build.removedockerimage(imageURI)
        }
    }
}
} 
